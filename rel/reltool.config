{sys, [
    {lib_dirs, ["../apps/", "../deps/"]},
    {rel, "railgun", "1", [
        kernel,
        stdlib,
        sasl,
        cowboy,
        riak_core,
        railgun
    ]},
    {rel, "start_clean", "", [
        kernel,
        stdlib
    ]},
    {boot_rel, "railgun"},
    {profile, embedded},
    {excl_sys_filters, [
        "^bin/.*",
        "^erts.*/bin/(dialyzer|typer)"
    ]},
    {app, sasl,      [{incl_cond, include}]},
    {app, cowboy,    [{incl_cond, include}]},
    {app, riak_core, [{incl_cond, include}]},
    {app, railgun,   [{incl_cond, include}]}
]}.

{target_dir,   "railgun"}.
{overlay_vars, "vars.config"}.

{overlay, [
    {mkdir,    "data/ring"},
    {mkdir,    "log/sasl"},
    {copy,     "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
    {copy,     "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
    {template, "files/app.config", "etc/app.config"},
    {template, "files/vm.args", "etc/vm.args"},
    {template, "files/railgun", "bin/railgun"},
    {template, "files/railgun-admin", "bin/railgun-admin"}
]}.

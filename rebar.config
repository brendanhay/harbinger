    {bitcask,    ".*", {git, "git://github.com/basho/bitcask.git"}},
    {meck,       ".*", {git, "git://github.com/eproxus/meck.git"}},
    {proper,     ".*", {git, "git://github.com/manopapad/proper.git"}},

{sub_dirs, [
    "apps/*",
    "rel"
]}.

{deps, [
    {cowboy,     ".*", {git, "git://github.com/extend/cowboy.git"}},
    {lager,      ".*", {git, "git://github.com/basho/lager.git"}},
    {restomp,    ".*", {git, "git://github.com/brendanhay/restomp.git"}},
    {riak_core,  ".*", {git, "git://github.com/basho/riak_core.git"}},
    {erlando,    ".*", {git, "git://github.com/rabbitmq/erlando.git"}},
    {protobuffs, ".*", {git, "git://github.com/basho/erlang_protobuffs.git"}},
    {meck,       ".*", {git, "git://github.com/eproxus/meck.git"}},
    {proper,     ".*", {git, "git://github.com/manopapad/proper.git"}}
]}.

{require_otp_vsn, "R15"}.
{erl_opts,        [debug_info, warnings_as_errors]}.
{xref_checks,     [undefined_function_calls]}.
{eunit_opts,      [verbose]}.
{cover_enabled,   true}.
